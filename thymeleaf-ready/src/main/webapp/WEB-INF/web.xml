<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:web="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<servlet>
		<servlet-name>AppServlet</servlet-name>
		<servlet-class>com.thymeleafready.servlets.AppServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AppServlet</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>ThymeleafFilter</filter-name>
		<filter-class>com.thymeleafready.filters.ThymeleafFilter</filter-class>
	</filter>
	
	<!-- If we add more filters, the ThymeleafFilter should be the last one in filter chain. -->
	<filter-mapping>
		<filter-name>ThymeleafFilter</filter-name>
		<url-pattern>/app/*</url-pattern>
	</filter-mapping>

</web-app>